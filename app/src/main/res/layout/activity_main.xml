<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.playcallgodtools.MainActivity">

    <ImageView
        android:src="@drawable/bg_main"
        android:background="@color/main_iv_bg"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:id="@+id/imageView"/>
    <LinearLayout
        android:layout_marginTop="50dp"
        android:padding="6dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_text"/>
        <EditText
            android:id="@+id/et_text"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:padding="4dp"
            android:background="@drawable/bg_inputtext_shape"
            android:textSize="12sp"
            android:hint="@string/main_et_text"
            android:maxLength="12"
            android:lines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_ok"
        android:background="@drawable/bg_button_shape"
        android:text="@string/main_buttton_text"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
